# Template file for 'cosmic-session'
pkgname=cosmic-session
version=1.0.0alpha4
revision=1
archs="x86_64 aarch64"
build_helper=rust
hostmakedepends="git just cargo pkg-config clang19"
makedepends="rust-std libxkbcommon-devel pipewire-devel libclang19 eudev-libudev-devel libinput-devel"
depends="cosmic-applibrary cosmic-applets cosmic-bg cosmic-comp cosmic-greeter cosmic-icons cosmic-idle cosmic-launcher cosmic-notifications cosmic-osd cosmic-panel cosmic-randr cosmic-screenshot cosmic-settings cosmic-settings-daemon xdg-desktop-portal-cosmic xorg-server-xwayland pop-fonts"
short_desc="WIP"
maintainer="strix vyxlor"
license="GPL-3.0"
homepage="https://github.com/pop-os/cosmic-applets"

do_fetch() {
	git clone https://github.com/pop-os/cosmic-settings.git "$wrksrc"
}

do_build() {
    export RUSTFLAGS="--sysroot ${XBPS_CROSS_BASE:-/}"
    just build-release
}

do_install() {
    export CARGO_TARGET_DIR="target/${XBPS_CROSS_BASE:+${RUST_TARGET}}"
    just rootdir=$DESTDIR prefix=/usr install
}

post_install() {
    vlicense LICENSE.md
}
